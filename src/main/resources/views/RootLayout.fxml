<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="600.0" minWidth="1024.0" prefHeight="600.0" prefWidth="1024.0"
	xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.kasztelanic.ai.assignment3.view.controllers.RootLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem fx:id="newGameMenuItem" mnemonicParsing="false"
							onAction="#onNewGame" text="New game" />
						<MenuItem fx:id="quitMenuItem" mnemonicParsing="false"
							onAction="#onQuit" text="Quit" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem fx:id="aboutMenuItem" mnemonicParsing="false"
							onAction="#onAbout" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<AnchorPane fx:id="mainView" prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER" />
	</center>
	<bottom>
		<HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0"
			spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<HBox alignment="CENTER" spacing="10.0">
					<children>
						<Label text="Player1">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
						</Label>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<Label text="Points:" />
								<Label fx:id="player1PointsLb" text="10" />
							</children>
						</HBox>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<Label text="Type:" />
								<Label fx:id="player1Lb" text="Human" />
							</children>
						</HBox>
						<HBox fx:id="player1AiHBox" alignment="CENTER" spacing="10.0">
							<children>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Tree depth:" />
										<Label fx:id="player1TreeDepthLb" text="3" />
									</children>
								</HBox>
								<HBox fx:id="player1AlphaBetaIndicator" alignment="CENTER"
									spacing="5.0">
									<children>
										<Label text="Alpha-Beta" />
									</children>
								</HBox>
							</children>
						</HBox>
					</children>
				</HBox>
				<Label text="|" />
				<HBox alignment="CENTER" spacing="10.0">
					<children>
						<Label text="Player2">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
						</Label>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<Label text="Points:" />
								<Label fx:id="player2PointsLb" text="10" />
							</children>
						</HBox>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<Label text="Type:" />
								<Label fx:id="player2Lb" text="Human" />
							</children>
						</HBox>
						<HBox fx:id="player2AiHBox" alignment="CENTER" spacing="10.0">
							<children>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Tree depth:" />
										<Label fx:id="player2TreeDepthLb" text="3" />
									</children>
								</HBox>
								<HBox fx:id="player2AlphaBetaIndicator" alignment="CENTER"
									spacing="5.0">
									<children>
										<Label text="Alpha-Beta" />
									</children>
								</HBox>
							</children>
						</HBox>
					</children>
				</HBox>
				<Label layoutX="104.0" layoutY="17.0" text="|" />
				<HBox alignment="CENTER" spacing="10.0">
					<children>
						<Label text="Common">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
						</Label>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<Label text="Board size:" />
								<Label fx:id="boardSizeLb" text="5" />
							</children>
						</HBox>
						<HBox alignment="CENTER" spacing="5.0">
							<children>
								<Label text="Turn:" />
								<Rectangle fx:id="turnRectangle" arcHeight="5.0"
									arcWidth="5.0" fill="WHITE" height="20.0" stroke="BLACK"
									strokeType="INSIDE" width="20.0" />
							</children>
						</HBox>
						<Button fx:id="nextMoveBt" mnemonicParsing="false"
							onAction="#onNextMove" text="Next move" />
					</children>
				</HBox>
			</children>
			<padding>
				<Insets left="10.0" />
			</padding>
		</HBox>
	</bottom>
</BorderPane>
